extends layout

block content
  form(action="login", method="post" class="login-form normal-form")
    label(for="email")
      span Usuario
      input(type="text", name="username" required)
    label(for="password")
      span Contraseña
      input(type="password", name="password" required)
    input(type="submit" value="Login →" class="button login-button")